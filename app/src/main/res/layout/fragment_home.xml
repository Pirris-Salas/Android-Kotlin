<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.HomeFragment">

    //Esta etiqueta nos permite realizar scroll en la pantalla, no obstante
    //solo admite un elemento dentro de ella, por lo que procedemos a
    //insertar un LinearLayout para contener todas las vistas

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            // Siempre debemos de asignar una orientacion a los LinearLayout

            //CardView va a contener todo dentro del LinearLayout

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardViewMarginHome"
                app:cardCornerRadius="@dimen/margin4dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/altoImageViewHome"
                        android:src="@drawable/banner_platzi_conf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin1dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/magin10dp"
                        android:layout_marginTop="@dimen/magin10dp"
                        android:layout_marginRight="@dimen/magin10dp"
                        android:text="@string/inicio_frag_tv_que_es"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/size20sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin1dp"
                        android:layout_marginTop="@dimen/magin10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/magin10dp"
                        android:layout_marginTop="@dimen/magin10dp"
                        android:layout_marginRight="@dimen/magin10dp"
                        android:text="@string/inicio_frag_tv_que_es_resp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/size15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin1dp"
                        android:layout_marginTop="@dimen/magin10dp"
                        android:background="@color/colorPrimary" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardViewMarginHome"
                app:cardCornerRadius="@dimen/margin4dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/altoImageViewHome"
                        android:src="@drawable/platzi_conf_2" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin1dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/magin10dp"
                        android:layout_marginTop="@dimen/magin10dp"
                        android:layout_marginRight="@dimen/magin10dp"
                        android:text="@string/inicio_frag_tv_por_que"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/size20sp"
                        android:textStyle="bold" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin1dp"
                        android:layout_marginTop="@dimen/magin10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/magin10dp"
                        android:layout_marginTop="@dimen/magin10dp"
                        android:layout_marginRight="@dimen/magin10dp"
                        android:background="@color/colorPrimary"
                        android:text="@string/inicio_frag_tv_por_que_resp"
                        android:textSize="@dimen/size15sp" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin1dp"
                        android:layout_marginTop="@dimen/magin10dp"
                        android:background="@color/colorPrimary" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardViewMarginHome"
                app:cardCornerRadius="@dimen/margin4dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/altoImageViewHome"
                        android:src="@drawable/platzi_conf_3" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin1dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/magin10dp"
                        android:layout_marginLeft="@dimen/magin10dp"
                        android:layout_marginTop="@dimen/magin10dp"
                        android:background="@color/colorPrimaryDark"
                        android:text="@string/inicio_frag_tv_info"
                        android:textSize= "@dimen/size20sp"
                        android:textStyle="bold" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin1dp"
                        android:layout_marginTop="@dimen/magin10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/magin10dp"
                        android:layout_marginTop="@dimen/magin10dp"
                        android:layout_marginRight="@dimen/magin10dp"
                        android:background="@color/colorPrimary"
                        android:text="@string/inicio_frag_tv_info_resp"
                        android:textSize="@dimen/size15sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>