<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HomeFragment">

    //Esta etiqueta nos permite realizar scroll en la pantalla, no obstante
    //solo admite un elemento dentro de ella, por lo que procedemos a
    //insertar un LinearLayout para contener todas las vistas
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            // Siempre debemos de asignar una orientacion a los LinearLayout

            //CardView va a contener todo dentro del LinearLayout
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                android:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/altoImageViewHome"
                        android:src="@drawable/banner_platzi_conf"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/altoViewHomeFragment"
                        android:background="@color/colorPrimary"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/inicio_frag_tv_que_es"
                        android:textStyle="bold"
                        android:textSize="@dimen/sizeTitulo"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="@dimen/maginHomeSubtitulo"
                        android:layout_marginRight="@dimen/maginHomeSubtitulo"
                        android:layout_marginLeft="@dimen/maginHomeSubtitulo"
                    />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>